    </LinearLayout>
    <com.comeback.data.widget.RatioImageView android:id="@+id/iv_cover" android:layout_width="120dp" android:layout_height="156dp" android:scaleType="centerCrop" android:layout_marginStart="@dimen/view_margin_normal" app:radius="@dimen/view_margin_small" app:ratio="1.3"/>
</LinearLayout>
