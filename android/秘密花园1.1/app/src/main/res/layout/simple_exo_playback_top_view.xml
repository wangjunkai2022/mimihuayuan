<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="bottom" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/exo_controller_top" style="@style/ExoMediaTitleLayout">
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/exo_controls_title" style="@style/ExoMediaTitle"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/exo_controller_bottom" style="@style/ExoMediaControllerBottom">
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/exo_position" android:layout_marginLeft="10dp" style="@style/ExoMediaCurrPosition"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="@string/exo_fenge" style="@style/ExoMediaSpan"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/exo_duration" style="@style/ExoMediaDuration"/>
        <chuangyuan.ycj.videolibrary.widget.ExoDefaultTimeBar android:id="@+id/exo_progress" style="@style/ExoMediaTimeBar"/>
        <TextView style="@style/ExoMediaTextSwitch"/>
        <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/exo_video_fullscreen" style="@style/ExoMediaButton.Fullscreen"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/exo_play" android:src="@drawable/ic_exo_start" style="@style/ExoMediaButton.Play2"/>
    <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/exo_pause" android:src="@drawable/ic_exo_pause" style="@style/ExoMediaButton.Pause2"/>
</RelativeLayout>
