<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_root" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp">
    <com.comeback.data.widget.RatioImageView android:id="@+id/iv_img" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop"/>
    <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.comeback.data.widget.RatioImageView android:id="@+id/iv_head" android:layout_width="36dp" android:layout_height="36dp" android:scaleType="centerCrop" app:radius="100dp"/>
        <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_head" android:layout_marginStart="8dp"/>
        <TextView android:textSize="10sp" android:textColor="@color/basic_secondary_text" android:id="@+id/tv_play_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_head" android:layout_below="@+id/tv_name" android:layout_marginStart="8dp"/>
    </RelativeLayout>
</LinearLayout>
