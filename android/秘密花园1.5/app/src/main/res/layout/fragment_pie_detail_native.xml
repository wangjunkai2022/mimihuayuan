<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/fl_play" android:layout_width="match_parent" android:layout_height="240dp" android:layout_marginTop="@dimen/view_margin_large">
            <ImageView android:id="@+id/iv_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
            <View android:background="#0000" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <ImageView android:layout_gravity="center" android:id="@+id/iv_play" android:layout_width="60dp" android:layout_height="60dp" android:src="@mipmap/player_icon_start_play" android:scaleType="centerCrop"/>
        </FrameLayout>
        <TextView android:textSize="20sp" android:textColor="@color/basic_primary_text" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large">
            <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_love_num" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
            <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_score" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large">
            <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_date" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
            <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_long" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        </LinearLayout>
        <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_actor" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        <TextView android:textSize="@dimen/text_detail" android:id="@+id/tv_intro" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
    </LinearLayout>
    <TextView android:textSize="24sp" android:textColor="@color/basic_primary_text" android:gravity="center" android:id="@+id/tv_error" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:text="无片源"/>
</FrameLayout>
