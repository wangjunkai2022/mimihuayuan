<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/ll_root" android:padding="@dimen/view_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.comeback.data.widget.RatioImageView android:id="@+id/iv_cover" android:layout_width="90dp" android:layout_height="wrap_content" android:scaleType="centerCrop" app:radius="@dimen/view_margin_normal" app:ratio="1.3"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="107dp" android:layout_marginStart="@dimen/view_margin_normal">
        <TextView android:textSize="@dimen/text_title" android:textColor="@color/basic_primary_text" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_third_text" android:gravity="center_vertical" android:id="@+id/tv_intro" android:layout_width="match_parent" android:layout_height="0dp" android:maxLines="3" android:layout_weight="1" android:lineSpacingExtra="@dimen/view_margin_small"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/basic_third_text" android:id="@+id/tv_author" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_small" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textColor="@color/gkj_color2" android:id="@+id/tv_rank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_small" android:singleLine="true" android:layout_marginStart="@dimen/view_margin_xlarge"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
