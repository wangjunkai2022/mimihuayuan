<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/ll_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/view_margin_normal">
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/view_margin_small">
        <com.comeback.data.widget.RatioFrameLayout android:layout_width="148dp" android:layout_height="wrap_content" app:ratio="0.6">
            <com.comeback.data.widget.RatioImageView android:id="@+id/iv_img" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" app:ratio="0.6"/>
            <TextView android:textSize="@dimen/text_detail" android:textColor="@color/white" android:layout_gravity="end|bottom" android:id="@+id/tv_duration" android:background="@drawable/bg_jianbian" android:padding="@dimen/view_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
        </com.comeback.data.widget.RatioFrameLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/view_margin_normal">
            <TextView android:textColor="@color/basic_secondary_text" android:gravity="top" android:layout_gravity="bottom" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/view_margin_small" android:maxLines="1"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_normal" android:layout_marginBottom="@dimen/view_margin_normal">
                <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_secondary_text" android:id="@+id/tv_tag1" android:background="@drawable/bg_radius_cucumber2" android:paddingTop="@dimen/view_margin_small" android:paddingBottom="@dimen/view_margin_small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
                <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_secondary_text" android:id="@+id/tv_tag2" android:background="@drawable/bg_radius_cucumber2" android:paddingTop="@dimen/view_margin_small" android:paddingBottom="@dimen/view_margin_small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal" android:layout_marginStart="@dimen/view_margin_normal"/>
                <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_secondary_text" android:id="@+id/tv_tag3" android:background="@drawable/bg_radius_cucumber2" android:paddingTop="@dimen/view_margin_small" android:paddingBottom="@dimen/view_margin_small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal" android:layout_marginStart="@dimen/view_margin_normal"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_secondary_text" android:id="@+id/tv_play_count" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_primary_text" android:layout_gravity="end" android:id="@+id/tv_pay" android:background="@drawable/bg_radius4_cucumber" android:padding="@dimen/view_margin_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/view_margin_small" android:text=" 点播 "/>
    </FrameLayout>
</LinearLayout>
