<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout android:id="@+id/refreshLayout" android:background="#ff1b1e23" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_list" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <com.google.android.material.appbar.AppBarLayout android:orientation="vertical" android:id="@+id/app_bar_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="#ff212429" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="48dp" app:layout_scrollFlags="9">
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab1" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab2" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab3" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab4" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab5" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab6" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab7" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
            <com.google.android.material.tabs.TabLayout android:id="@+id/tab8" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="@color/kmColorAccent" app:tabTextColor="@color/basic_third_text"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout android:background="#ff26292f" android:layout_width="match_parent" android:layout_height="48dp" app:layout_scrollFlags="0">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:layout_width="32dp" android:layout_height="16dp" android:src="@drawable/ic_exo_back" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="影片分类"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/iv_search" android:padding="@dimen/view_margin_small" android:layout_width="24dp" android:layout_height="24dp" android:src="@mipmap/icon_search_xj" android:layout_marginEnd="@dimen/view_margin_normal"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
