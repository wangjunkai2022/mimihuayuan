<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_normal"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_tags" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:background="#131313" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/basic_third_text" android:layout_gravity="end" android:id="@+id/tv_select_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_normal" android:layout_marginBottom="@dimen/view_margin_normal" android:text="已筛选标签 0" android:layout_marginEnd="48dp"/>
        <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/tv_confirm" android:background="@drawable/bg_radius_cucumber3" android:paddingTop="@dimen/view_margin_normal" android:paddingBottom="@dimen/view_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/view_margin_large" android:text="确定" android:layout_marginStart="48dp" android:layout_marginEnd="48dp"/>
    </LinearLayout>
</LinearLayout>
