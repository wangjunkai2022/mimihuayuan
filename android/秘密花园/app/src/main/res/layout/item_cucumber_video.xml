<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" app:cardCornerRadius="@dimen/view_margin_normal">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.comeback.data.widget.RatioFrameLayout android:id="@+id/fl_root" android:layout_width="match_parent" android:layout_height="wrap_content" app:ratio="0.56">
            <com.comeback.data.widget.RatioImageView android:id="@+id/iv_img" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" app:ratio="0.56"/>
            <TextView android:textSize="@dimen/text_title" android:textColor="@color/white" android:gravity="top" android:layout_gravity="bottom" android:id="@+id/tv_name" android:background="@drawable/bg_jianbian_90" android:padding="@dimen/view_margin_large" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="1"/>
            <TextView android:textSize="@dimen/text_detail" android:textColor="@color/white" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/tv_duration" android:padding="@dimen/view_margin_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_normal"/>
            <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_primary_text" android:layout_gravity="end" android:id="@+id/tv_pay" android:background="@drawable/bg_radius4_cucumber" android:padding="@dimen/view_margin_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/view_margin_small" android:text=" 点播 "/>
        </com.comeback.data.widget.RatioFrameLayout>
        <LinearLayout android:gravity="center_vertical" android:padding="@dimen/view_margin_normal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_play_count" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_like" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_km_like_normal"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
