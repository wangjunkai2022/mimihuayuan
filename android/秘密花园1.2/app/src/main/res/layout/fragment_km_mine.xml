<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/km_mine_bg" android:scaleType="fitXY" android:adjustViewBounds="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_collect" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textColor="@color/basic_primary_text" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="收藏的视频" android:drawableLeft="@mipmap/ic_km_colletion_select" android:drawablePadding="16dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/km_detail_btn_arrow_normal"/>
    </LinearLayout>
    <View android:background="#f0f0f0" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_star" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textColor="@color/basic_primary_text" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="关注" android:drawableLeft="@mipmap/ic_km_like_selected" android:drawablePadding="16dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/km_detail_btn_arrow_normal"/>
    </LinearLayout>
    <View android:background="#f0f0f0" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="35dp"/>
    <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textSize="18sp" android:textColor="@color/kmColorAccent" android:id="@+id/et_current" android:background="@drawable/bg_radius8_grey" android:padding="@dimen/view_margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/tv_change" android:background="@drawable/bg_radiu4_gkj3" android:padding="@dimen/view_margin_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="修改" android:layout_marginStart="@dimen/view_margin_normal"/>
        </LinearLayout>
        <TextView android:textColor="@color/basic_primary_text" android:id="@+id/tv_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:text="地址一 vip   http://vip.97kuaimao.com:8089\10地址二普通 https://km.97kuaimao.com\10 \10 \10 cdn地址   http://vip.cdfdjj.com\10 \10 cdn2  http://video.cdfdjj.com" android:textIsSelectable="true"/>
    </LinearLayout>
    <TextView android:textSize="18sp" android:textColor="@color/basic_primary_text" android:paddingLeft="@dimen/view_margin_large" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:layout_marginBottom="@dimen/view_margin_large" android:text="资源节点(影响页面展示速度)" android:paddingEnd="@dimen/view_margin_large"/>
    <RadioGroup android:orientation="vertical" android:id="@+id/radio_group_host" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/view_margin_large" android:paddingEnd="@dimen/view_margin_large">
        <RadioButton android:textColor="@color/km_select" android:id="@+id/radio_host1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="默认节点" android:buttonTint="@color/km_select"/>
        <RadioButton android:textColor="@color/km_select" android:id="@+id/radio_host2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备用节点1" android:buttonTint="@color/km_select"/>
        <RadioButton android:textColor="@color/km_select" android:id="@+id/radio_host3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备用节点2" android:buttonTint="@color/km_select"/>
        <RadioButton android:textColor="@color/km_select" android:id="@+id/radio_host4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备用节点3" android:buttonTint="@color/km_select"/>
        <RadioButton android:textColor="@color/km_select" android:id="@+id/radio_host5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备用节点4" android:buttonTint="@color/km_select"/>
    </RadioGroup>
</LinearLayout>
