<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rl_root" android:background="@color/white" android:paddingTop="@dimen/view_margin_large" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/view_margin_large" android:paddingEnd="@dimen/view_margin_large">
    <TextView android:textSize="@dimen/text_title" android:textColor="@color/basic_primary_text" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textColor="@color/basic_secondary_text" android:id="@+id/tv_intro" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_small" android:maxLines="2" android:layout_below="@+id/tv_name"/>
    <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_third_text" android:id="@+id/tv_view" android:background="@drawable/bg_radius2_grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_normal" android:layout_below="@+id/tv_intro" android:paddingStart="@dimen/view_margin_small" android:paddingEnd="@dimen/view_margin_small"/>
    <TextView android:textSize="@dimen/text_detail" android:textColor="@color/basic_third_text" android:id="@+id/tv_collect" android:background="@drawable/bg_radius2_grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_normal" android:layout_toRightOf="@+id/tv_view" android:layout_below="@+id/tv_intro" android:paddingStart="@dimen/view_margin_small" android:paddingEnd="@dimen/view_margin_small" android:layout_marginStart="@dimen/view_margin_small"/>
    <View android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="@dimen/view_margin_large" android:layout_below="@+id/tv_view"/>
</RelativeLayout>
