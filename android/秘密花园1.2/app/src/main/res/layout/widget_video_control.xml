<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/exo_controller_top" style="@style/ExoMediaTitleLayout">
        <TextView android:id="@+id/exo_controls_title" android:layout_width="wrap_content" android:layout_weight="1" style="@style/ExoMediaTitle"/>
        <TextView android:textColor="#fff" android:id="@+id/tv_collect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="收藏" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        <TextView android:textColor="#fff" android:id="@+id/tv_rotation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="旋转" android:paddingStart="16dp" android:paddingEnd="16dp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/exo_controller_bottom" style="@style/ExoMediaControllerBottom">
        <ImageButton android:id="@+id/exo_play" style="@style/ExoMediaButton.Play"/>
        <ImageButton android:id="@+id/exo_pause" style="@style/ExoMediaButton.Pause"/>
        <chuangyuan.ycj.videolibrary.widget.ExoDefaultTimeBar android:id="@+id/exo_progress" style="@style/ExoMediaTimeBar"/>
        <TextView android:id="@+id/exo_position" style="@style/ExoMediaCurrPosition"/>
        <TextView android:text="@string/exo_fenge" style="@style/ExoMediaSpan"/>
        <TextView android:id="@+id/exo_duration" style="@style/ExoMediaDuration"/>
        <TextView style="@style/ExoMediaTextSwitch"/>
        <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/exo_video_fullscreen" style="@style/ExoMediaButton.Fullscreen"/>
    </LinearLayout>
</RelativeLayout>
