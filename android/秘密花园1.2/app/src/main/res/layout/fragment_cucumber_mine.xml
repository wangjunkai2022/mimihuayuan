    <RadioGroup android:orientation="horizontal" android:id="@+id/radio_group_host" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:textColor="@color/cucumber_select" android:id="@+id/radio_host1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="默认节点" android:buttonTint="@color/cucumber_select"/>
