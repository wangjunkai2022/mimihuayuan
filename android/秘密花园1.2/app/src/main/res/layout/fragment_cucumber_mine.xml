    <TextView android:textSize="18sp" android:textColor="@color/basic_primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:layout_marginBottom="@dimen/view_margin_large" android:text="图片节点(影响图片加载速度)"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/radio_group_image" android:layout_width="wrap_content" android:layout_height="wrap_content">
