    </RadioGroup>
    <TextView android:textSize="18sp" android:textColor="@color/basic_primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_large" android:layout_marginBottom="@dimen/view_margin_large" android:text="头像节点(女优头像加载速度)"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/radio_group_head" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:textColor="@color/cucumber_select" android:id="@+id/radio_head1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="默认节点" android:buttonTint="@color/cucumber_select"/>
        <RadioButton android:textColor="@color/cucumber_select" android:id="@+id/radio_head2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="备用节点" android:buttonTint="@color/cucumber_select"/>
    </RadioGroup>
</LinearLayout>
