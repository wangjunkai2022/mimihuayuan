<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#161823" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:layout_width="32dp" android:layout_height="16dp" android:src="@drawable/ic_exo_back" android:tint="#d9991d" android:paddingStart="@dimen/view_margin_normal" android:paddingEnd="@dimen/view_margin_normal"/>
        <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="影片分类"/>
        <ImageView android:layout_gravity="end|center_vertical" android:id="@+id/iv_search" android:padding="@dimen/view_margin_small" android:layout_width="24dp" android:layout_height="24dp" android:src="@mipmap/icon_search_xj" android:tint="#d9991d" android:layout_marginEnd="@dimen/view_margin_normal"/>
    </FrameLayout>
    <com.google.android.material.tabs.TabLayout android:id="@+id/tab1" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="1" app:tabSelectedTextColor="#d9991d" app:tabTextColor="@color/basic_third_text"/>
    <com.google.android.material.tabs.TabLayout android:id="@+id/tab2" android:layout_width="match_parent" android:layout_height="40dp" app:tabIndicatorColor="@null" app:tabMode="0" app:tabSelectedTextColor="#d9991d" app:tabTextColor="@color/basic_third_text"/>
    <include layout="@layout/base_refresh_recycler"/>
</LinearLayout>
