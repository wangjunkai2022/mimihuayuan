<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/exo_controller_top" style="@style/ExoMediaTitleLayout">
        <TextView android:id="@id/exo_controls_title" style="@style/ExoMediaTitle" />
    </LinearLayout>
    <LinearLayout android:id="@id/exo_controller_bottom" style="@style/ExoMediaControllerBottom">
        <ImageButton android:id="@id/exo_play" style="@style/ExoMediaButton.Play" />
        <ImageButton android:id="@id/exo_pause" style="@style/ExoMediaButton.Pause" />
        <chuangyuan.ycj.videolibrary.widget.ExoDefaultTimeBar android:id="@id/exo_progress" style="@style/ExoMediaTimeBar" />
        <TextView android:id="@id/exo_position" style="@style/ExoMediaCurrPosition" />
        <TextView android:text="@string/exo_fenge" style="@style/ExoMediaSpan" />
        <TextView android:id="@id/exo_duration" style="@style/ExoMediaDuration" />
        <TextView style="@style/ExoMediaTextSwitch" />
        <androidx.appcompat.widget.AppCompatCheckBox android:id="@id/exo_video_fullscreen" style="@style/ExoMediaButton.Fullscreen" />
    </LinearLayout>
</RelativeLayout>